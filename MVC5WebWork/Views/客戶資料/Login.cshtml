@model MVC5WebWork.Models.LoginVM

@{
    ViewBag.Title = "Login";
}
@section breadcrumb{
    <li>
        <i class="icon-home"></i>
        <a href="@Url.Action("Login","客戶資料")">登入</a>
        <i class="icon-angle-right"></i>
    </li>
    @*<li><a href="#">編輯客戶資料</a></li>*@
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid-full">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="login-box">
                    <div class="icons">
                        <a href="#"><i class="halflings-icon home"></i></a>
                        <a href="#"><i class="halflings-icon cog"></i></a>
                    </div>
                    <h2>Login to your account</h2>
                    <form class="form-horizontal" action="index.html" method="post">
                        <fieldset>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-10">
                                </div>
                            </div>
                            @*@Html.LabelFor(model => model.帳號)*@
                            <div class="input-prepend" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                @Html.EditorFor(model => model.帳號, new { htmlAttributes = new { @class = "input-large span10", @placeholder = "type username" } })
                                @Html.ValidationMessageFor(model => model.帳號, "", new { @class = "text-danger" })
                            </div>

                            @*@Html.LabelFor(model => model.密碼)*@
                            <div class="clearfix"></div>
                            <div class="input-prepend" title="Password">
                                <span class="add-on"><i class="halflings-icon lock"></i></span>
                                @Html.EditorFor(model => model.密碼, new { htmlAttributes = new { @class = "input-large span10", @placeholder = "type password" } })
                                @Html.ValidationMessageFor(model => model.密碼, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"></div>

                            <div class="button-login">
                                <input type="submit" value="登入" class="btn btn-primary" />
                            </div>
                            <div class="clearfix"></div>
                    </form>
                    <hr />
                </div><!--/span-->
            </div><!--/row-->

        </div><!--/.fluid-container-->

    </div><!--/fluid-row-->
}

