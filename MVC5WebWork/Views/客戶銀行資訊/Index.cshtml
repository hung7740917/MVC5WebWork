@model IEnumerable<MVC5WebWork.Models.客戶銀行資訊>

@{
    ViewBag.Title = "客戶銀行資訊管理";
}
@section breadcrumb{
    <li>
        <i class="icon-home"></i>
        <a href="@Url.Action("Index","客戶銀行資訊")">客戶銀行資訊</a>
        <i class="icon-angle-right"></i>
    </li>
    @*<li><a href="#">新增客戶銀行資訊</a></li>*@
}
<h2>客戶銀行資訊管理</h2>

<p>
    @Html.ActionLink("新增客戶銀行資訊", "Create") |
    <a href="@Url.Action("SaveToExcel","客戶銀行資訊", new {FileName = ViewBag.Title, SortBy = ViewBag.SortBy,search = ViewBag.search })">匯出Excel</a>
</p>

<form>
    @Html.TextBox("search")
    <input type="submit" value="搜尋" class="btn btn-primary" />
</form>

<br />

<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+銀行名稱",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.銀行名稱)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-銀行名稱",search = ViewBag.search})">▼</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+銀行代碼",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.銀行代碼)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-銀行代碼",search = ViewBag.search})">▼</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+分行代碼",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.分行代碼)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-分行代碼",search = ViewBag.search})">▼</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+帳戶名稱",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.帳戶名稱)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-帳戶名稱",search = ViewBag.search})">▼</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+帳戶號碼",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.帳戶號碼)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-帳戶號碼",search = ViewBag.search})">▼</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "+客戶名稱",search = ViewBag.search })">▲</a>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            <a href="@Url.Action("Index","客戶銀行資訊",new { SortBy = "-客戶名稱",search = ViewBag.search})">▼</a>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@using PagedList
@using PagedList.Mvc
@Html.PagedListPager(Model as IPagedList,p => Url.Action("Index",new { PageNo = p}))
